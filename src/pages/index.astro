---
import { getImage } from "astro:assets";
import Layout from "../components/Layout.astro";
import backgroundImage from "../images/background.png";

var background = await getImage({ src: backgroundImage });
---

<Layout>
  <div class="relative flex h-screen items-center justify-center overflow-hidden bg-black">
    <h1 class="relative z-10 text-8xl font-bold text-white">Hello world!</h1>
    <div
      class="absolute -inset-1/2 m-auto h-[1969px] w-[2353px] bg-[length:2353px_1969px] blur-3xl"
      style={{ backgroundImage: `url('${background.src}')` }}
    >
    </div>
  </div>
</Layout>
